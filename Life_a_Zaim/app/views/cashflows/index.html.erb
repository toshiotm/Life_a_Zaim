<h1>Listing cashflows</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Category</th>
    <th>Unit</th>
    <th>Description</th>
    <th>Isincome</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cashflows.each do |cashflow| %>
  <tr>
    <td><%= cashflow.amount %></td>
    <td><%= cashflow.category %></td>
    <td><%= unit_convert cashflow.unit %></td>
    <td><%= cashflow.description %></td>
    <td><%= cashflow.isIncome %></td>
    <td><%= cashflow.date %></td>
    <td><%= link_to 'Show', cashflow %></td>
    <td><%= link_to 'Edit', edit_cashflow_path(cashflow) %></td>
    <td><%= link_to 'Destroy', cashflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

